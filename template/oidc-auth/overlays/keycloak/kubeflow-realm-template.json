{
    "id": "kubeflow",
    "realm": "kubeflow",
    "displayName": "Kubeflow Realm",
    "enabled": true,
    "sslRequired": "external",
    "registrationAllowed": false,
    "requiredCredentials": [ "password" ],
    "users" : [
        {
            "username" : "$ARGOFLOW_USERNAME",
            "enabled": true,
            "email" : "$ARGOFLOW_EMAIL",
            "firstName": "$ARGOFLOW_FIRSTNAME",
            "lastName": "$ARGOFLOW_LASTNAME",
            "credentials" : [
                { "type" : "password",
                  "value" : "$ARGOFLOW_ADMIN_PASS" }
            ],
            "realmRoles": [ "user" ],
            "clientRoles": {
                "account": ["view-profile", "manage-account"]
            }
        }
    ],
    "roles" : {
        "realm" : [
            {
                "name": "user",
                "description": "User privileges",
                "composite": true,
                "composites": {
                "realm": [
                    "offline_access",
                    "uma_authorization"
                ],
                "client": {
                    "account": [
                    "manage-account",
                    "view-profile"
                    ]
                }
                },
                "clientRole": false,
                "containerId": "kubeflow",
                "attributes": {}
            },
            {
                "name": "uma_authorization",
                "description": "${role_uma_authorization}",
                "composite": false,
                "clientRole": false,
                "containerId": "kubeflow",
                "attributes": {}
              },
              {
                "name": "offline_access",
                "description": "${role_offline-access}",
                "composite": false,
                "clientRole": false,
                "containerId": "kubeflow",
                "attributes": {}
              }
        ]
    },
    "clients": [
        {
            "id": "56185130-63f4-441f-b618-f471e7baac6d",
            "clientId": "$ARGOFLOW_OIDC_CLIENT_ID",
            "name": "Oauth2 Proxy",
            "surrogateAuthRequired": false,
            "enabled": true,
            "alwaysDisplayInConsole": false,
            "clientAuthenticatorType": "client-secret",
            "secret": "$ARGOFLOW_OIDC_CLIENT_SECRET",
            "redirectUris": [
                "https://$ARGOFLOW_SUBDOMAIN_DASHBOARD.$ARGOFLOW_DOMAIN",
                "https://$ARGOFLOW_SUBDOMAIN_DASHBOARD.$ARGOFLOW_DOMAIN/oauth2/callback"
            ],
            "webOrigins": []
        }
    ]
}
